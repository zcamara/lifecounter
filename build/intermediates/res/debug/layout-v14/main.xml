            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player 1"
            android:id="@+id/playerName1"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dip" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:gravity="center">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + "
            android:onClick="onBtnClicked"
            android:id="@+id/p1gain1"
            android:layout_marginTop="3dp" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:onClick="onBtnClicked"
            android:id="@+id/p1lose1"
            android:layout_toRightOf="@id/p1gain1"
            android:layout_marginTop="3dp"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5"
            android:onClick="onBtnClicked"
            android:id="@+id/p1gain5"
            android:layout_toRightOf="@id/p1lose1"
            android:layout_marginTop="3dp"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-5 "
            android:onClick="onBtnClicked"
            android:id="@+id/p1lose5"
            android:layout_toRightOf="@id/p1gain5"
            android:layout_marginTop="3dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="20"
            android:id="@+id/p1life"
            android:layout_column="2"
            android:layout_gravity="center_vertical|right"
            android:paddingRight="3dip" />
    </TableRow>
